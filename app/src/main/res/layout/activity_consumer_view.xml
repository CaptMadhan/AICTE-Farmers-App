<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consumer_view"
    android:background="@drawable/main_color_selector">
    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="376dp"
        android:layout_height="683dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457">
        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/blackb2"
            android:layout_marginTop="10dp"
            android:hint="Search Farmer by name or city"
            android:textSize="25dp"
            android:textAlignment="center"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/blackb2"
            android:text="Search"
            android:textSize="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="113dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Results"
            android:textSize="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:id="@+id/sub_card"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="160dp"
            android:background="@drawable/blackb3"
            android:scrollbars="vertical">
        <TextView
            android:id="@+id/farmer_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Farmer's name"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/farmer_name"
                android:layout_marginTop="10dp"
                android:text="City"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------------------------------"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------------------------------"
                android:textSize="20dp"
                android:layout_marginTop="33dp"/>
            <TextView
                android:id="@+id/farmer1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ramesh"
                android:layout_marginLeft="20dp"
                android:textSize="22dp"
                android:layout_below="@+id/farmer_name"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/farmer_name"
                android:layout_below="@+id/farmer_name"
                android:text="Mangalore"
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/divider3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------------------------------"
                android:textSize="20dp"
                android:layout_below="@+id/farmer1"/>
            <TextView
                android:id="@+id/farmer2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Suresh Kumar"
                android:layout_marginLeft="20dp"
                android:textSize="22dp"
                android:layout_below="@+id/farmer1"
                android:layout_marginTop="22dp"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/farmer_name"
                android:layout_below="@+id/farmer1"
                android:text="Shivamogga"
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/divider4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------------------------------"
                android:textSize="20dp"
                android:layout_below="@+id/farmer2"/>
            <TextView
                android:id="@+id/farmer3"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="ChandraShekar"
                android:layout_marginLeft="20dp"
                android:textSize="22dp"
                android:layout_below="@+id/farmer2"
                android:layout_marginTop="22dp"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/farmer_name"
                android:layout_below="@+id/farmer2"
                android:text="Mandya"
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/divider6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------------------------------"
                android:textSize="20dp"
                android:layout_below="@+id/farmer3"/>
            <TextView
                android:id="@+id/farmer4"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="Pavan Kumar"
                android:layout_marginLeft="20dp"
                android:textSize="22dp"
                android:layout_below="@+id/farmer3"
                android:layout_marginTop="22dp"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/farmer_name"
                android:layout_below="@+id/farmer3"
                android:text="Ballari "
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/divider5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------------------------------"
                android:textSize="20dp"
                android:layout_below="@+id/farmer4"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>